<section class="landing-section bg-black h-screen w-screen text-center relative overflow-hidden" data-header-color="black">
    <div class="z-30 relative h-full flex flex-col">
        <header>
            <div class=" animate-fade-in-up" id="model-y-info">
                <h2 class="text-black pt-40 text-5xl font-medium mt-[-60px] xl:mt-0 mb-4">Model Y</h2>
                <p class="text-black font-bold text-2xl mb-4 ">Desde 29.990 €</p>
                <p class=" text-black font-bold text-md">Precio con la aplicación de los programas Tesla Boost e incentivos de movilidad eléctrica</p>
            </div>
        </header>
        <footer class="flex flex-grow flex-nowrap justify-end flex-col pb-20">
            <div class=" gap-x-4 flex mx-auto">
                <a class=" bg-gray-700 border-[3px] border-gray-700 text-white text-sm rounded font-medium px-12 py-2 items-center inline-flex justify-center transition-colors hover:bg-gray-500 hover:text-white hover:border-gray-500"  
                href="#">Explorar inventario</a>
                <a class="bg-white border-[3px] border-white text-black text-sm rounded font-medium px-12 py-2 items-center inline-flex justify-center transition-colors duration-500 hover:bg-black hover:text-white hover:border-black" 
                href="#">Pedido personalizado</a>
            </div>
            
        </footer>
    </div>
    

    <div class="absolute top-0 bottom-0 h-full w-full z-10">
        <img src="/tesla-landing/modeloY.avif" alt="Model Y" class="hidden sm:flex h-full w-full object-cover object-center">
        <img src="/tesla-landing/modeloYmobile.avif" alt="Model Y" class="h-full w-full object-cover object-center">
    </div>
</section>



<script>
    //Animacion para los titulos
document.addEventListener("DOMContentLoaded", () => {
  const section = document.querySelector("#model-y-info");

  const observer = new IntersectionObserver(
    ([entry]) => {
      if (entry.isIntersecting) {
        
        section.classList.remove("opacity-0"); 
        section.classList.add("animate-fade-in-up");
      } else {
        section.classList.remove("animate-fade-in-up");
        section.classList.add("opacity-0");
      }
    },
    {
      threshold: 0.1, 
    }
  );

  observer.observe(section);
});

  
</script>