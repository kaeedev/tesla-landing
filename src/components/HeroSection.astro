        <video autoplay muted loop class="hidden sm:flex object-center object-cover h-full w-full" src="/video.webm"></video>
        <video autoplay muted loop class="object-center object-cover h-full w-full" src="/videomobile.webm"></video>
    </div>
</section>

<script>
    //Animacion para los titulos
document.addEventListener("DOMContentLoaded", () => {
  const section = document.querySelector("#model-hero-info");

  const observer = new IntersectionObserver(
    ([entry]) => {
      if (entry.isIntersecting) {
        
        section.classList.remove("opacity-0"); 
        section.classList.add("animate-fade-in-up");
      } else {
        section.classList.remove("animate-fade-in-up");
        section.classList.add("opacity-0");
      }
    },
    {
      threshold: 0.1, 
    }
  );

  observer.observe(section);
});

  
</script>